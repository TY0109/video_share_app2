<% provide(:title,  "ビデオ一覧") %>
<div class="content">  
  <% @organization_videos.each do |organization_video| %>
    <div style="float:left;margin:15px;"> 
      <div class="video-display-index">
        <iframe src="https://player.vimeo.com/video/<%= @organization_video_id%>" width="200px" height="100px" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen>
        </iframe>
      </div>
      <div class="video-title-and-action-index">
        <%= link_to organization_video.title, video_path(organization_video) %>
        <% if organization_video.is_valid == false %>
          <span>論理削除済み</span>
        <% end %><br>
        <% if current_system_admin.present? %>  
          <%= link_to "削除", video_path(organization_video), method: :delete, data:{confirm: "削除しますか？"} %><br> 
        <% end %> 
      </div>
    </div>
  <% end %> 
</div>

