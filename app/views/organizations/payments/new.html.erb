            <% else %>
              <%= form.submit "プランを選択", class: "btn btn-primary btn-block mt-3", data: { confirm: "1000円プランに変更してもよろしいですか？" } %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- プレミアムプラン -->
