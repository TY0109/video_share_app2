<!-- コメント入力フォーム ------------------------------------------------------------>
<%= form_with(model: [video, comment], url: video_comments_path(video.id), method: :post, remote: true ) do |f| %>
  <%= f.text_area :comment, class: "input-mysize" %>
  <%= f.submit "送信", class: "btn btn-outline-dark comment-submit float-right" %>
<% end %>