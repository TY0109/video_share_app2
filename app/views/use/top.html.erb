<div class="container py-4">
    <h2>レコブル</h2>
    <p>アカウントを選択してください</p>
    <div class="card-deck">
      <% if Rails.env.development? %>
        <div class="card">
          <div class="card-body">
            <% if current_system_admin %>
              <%= link_to "システム管理者", new_system_admin_session_path, class: "btn btn-lg btn-block btn-outline-primary" %>
            <% else %>
              <%= link_to "システム管理者", new_system_admin_session_path, class: "btn btn-lg btn-block btn-default" %>
            <% end %>
          </div>
        </div>
      <% end %>
        <div class="card">
          <div class="card-body">
            <% if current_user %>
              <%= link_to "投稿者", new_user_session_path, class: "btn btn-lg btn-block btn-outline-primary" %>
            <% else %>
              <%= link_to "投稿者", new_user_session_path, class: "btn btn-lg btn-block btn-default" %>
            <% end %>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <% if current_viewer %>
              <%= link_to "視聴者", new_viewer_session_path, class: "btn btn-lg btn-block btn-outline-primary" %>
            <% else %>
              <%= link_to "視聴者", new_viewer_session_path, class: "btn btn-lg btn-block btn-default" %>
            <% end %>
          </div>
        </div>
    </div>
</div>
